<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Version>0.1.0-alpha1</Version>
    <Authors>Roland Braun</Authors>
    <Company>Roland Braun</Company>
    <Copyright>MIT</Copyright>
    <Description>A custom theme for StatiC#, a static webside generator written in C#.</Description>
    <PackageProjectUrl>https://github.com/rolandbraun-dev/FoundationTheme</PackageProjectUrl>
    <NeutralLanguage>en-US</NeutralLanguage>
    <PackageReadmeFile>README_NUGET.md</PackageReadmeFile>
    <AssemblyName>StatiCsharp.Theme.$(MSBuildProjectName)</AssemblyName>
  </PropertyGroup>

  <!-- StatiC# reference -->
  <ItemGroup>
    <PackageReference Include="StatiCsharp" Version="0.1.0-alpha3" />
  </ItemGroup>

  <!-- Output files -->
  <ItemGroup>
    <None Update="README_NUGET.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Update="Resources\socialIcons\facebook.svg">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Resources\socialIcons\github.svg">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Resources\socialIcons\instagram.svg">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Resources\socialIcons\linkedin.svg">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Resources\socialIcons\mail.svg">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Resources\styles.css">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
